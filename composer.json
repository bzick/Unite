{
    "name": "bzick/unite",
    "description": "A PHP Unit Testing framework",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Ivan Shalganov",
            "email": "bzick@megagroup.ru"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ext-tokenizer": "*"
    },
    "autoload": {
        "psr-0": { "Unite\\": "src" },
        "classmap": ["src/Unite.php"]
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "suggest": {
        "ext-pcntl": "allow start tests with multi-threading",
        "ext-posix": "allow process control"
    },
    "bin": [
        "bin/unite"
    ]
}

